---
const { top, left, size } = Astro.props
---
<div class="ellipse"></div>

<style define:vars= {{ top, left, size }}>
    .ellipse {
    top: var(--top);
    left: var(--left);
    width: var(--size);
    height: var(--size);
    border-radius: var(--size);
    position: absolute;
    background: rgba(102, 175, 195, 0.07);
    z-index: -1;
  }
</style>
