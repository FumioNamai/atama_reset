---
const { time, originalPrice, discountPrice } = Astro.props;
---

<div class="course_discount">
  <div><p class="time">{time}<span>分コース</span></p></div>
  <div><p class="strikethrough"><span><s>{originalPrice}円</s></span></p></div>
<div><p class="d-price">{discountPrice}<span>円(税込)</span></p></div>
</div>

<style>
  p {
    padding: 0;
  }
  .course_discount {
    display: flex;
    overflow: hidden;
    justify-content: space-around;
    height: 30px;
  }

  .course_discount p {
    font-size: 2rem;
    font-family: "Noto Sans JP", sans-serif;
  }

  .time {
    display: inline-block;
    text-align: right;
    width: 90px;
  }

  .course_discount span {
    font-size: 1.2rem;
  }
  .time > span{
    font-size: 1.4rem;
  }

  .strikethrough {
    padding-left: 16px;
  }
  .d-price {
    color: var(--attention);
    font-weight: bold;
  }

  .d-price span {
    color: var(--textBlack);
    font-weight: normal;
  }
</style>
