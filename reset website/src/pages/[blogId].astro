---
import Layout from "@layouts/layout.astro";
import { getBlogs, getBlogDetail } from "../library/microcms";
import { Image } from "astro:assets";

export const prerender = true;
// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content) => ({
    params: {
      blogId: content.id,
    },
  }));
}

// 記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);

const articles = blog.article;
// console.log(blog.eyecatch);

---

<Layout>
  <main>
    <h1 class="title">{blog.title}</h1>
    <p class="publishedAt">{blog.publishedAt}</p>
    <img src={blog.eyecatch.url} alt="" height={ blog.eyecatch.height } width={ blog.eyecatch.width }>
    <p>{blog.category.id}</p>
    <div>
        {
          articles.map((article) => {
            switch(article.fieldId) {
              case "rich_editor":
                return <div set:html={article.rich_editor}></div>
              case "image":
                return <img src={article.image.url} alt="" height={article.image.height} width={article.image.width}/>
              case "text":
                return <p>{article.text}</p>
              default:
                break;
            }
          })

        }
    </div>
  </main>
</Layout>
