<style>
  header {
    position: relative;
    width: 100%;
    height: 64px;
    z-index: 10;
  }

  header p {
    text-align: end;
    margin-right: 1rem;
    margin-bottom: -1rem;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .left {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .hamburger {
    width: 60px;
    height: 60px;
    padding: 0 18px;
    background-color: transparent;
    border-color: transparent;
    z-index: 1000;
    cursor: pointer;
  }

  .hamburger span {
    width: 20px;
    height: 2px;
    border-radius: 1px;
    background-color: var(--primary);
    display: block;
    position: relative;
    transition: ease 0.5s;
    filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.5));
  }

  .hamburger span:nth-child(2) {
    margin: 6px 0;
  }

  .hamburger.open span:nth-child(1) {
    top: 8px;
    transform: rotate(45deg);
    background-color: var(--textWhite);
  }

  .hamburger.open span:nth-child(2) {
    opacity: 0;
    background-color: var(--textWhite);
  }

  .hamburger.open span:nth-child(3) {
    top: -8px;
    transform: rotate(-45deg);
    background-color: var(--textWhite);
  }

  .hamburger p {
    display: none; /* デスクトップのときに表示させる */
    padding-top: 2px;
    margin-left: -2px;
    transform: scale(0.7);
  }

  .logo img {
    width: 75px;
    filter: drop-shadow(1px 1px 5px rgba(0, 0, 0, 0.5));
  }

  .right {
    margin-right: 20px;
    width: 48px;
    height: 32px;
    background-image: url(/menu-background.png);
    background-repeat: no-repeat;
    background-size: 32px;
    background-position: center;
  }

  .right a {
    text-align: center;
    line-height: 32px;
    text-decoration: none;
    font-size: 1.6rem;
    color: var(--primary);
    font-weight: bold;
    filter: drop-shadow(1px 1px 10px rgba(0, 0, 0, 0.5));
  }

  p {
    font-size: 1rem;
    margin: 0;
    color: var(--primary);
    filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.5));
  }

  /* GlobalNav */

  .container {
    height: auto;
    position: absolute;
    top: 0;
    right: -100%;
    background: linear-gradient(
      180deg,
      rgba(84, 105, 158, 0.9) 0%,
      rgba(174, 183, 206, 0.9) 100%
      );
      padding-bottom: 24px;
      z-index: 100;
      opacity: 0;
      width: 100%;
    transition: all ease .5s;
  }

  .container.open {
    opacity: 1;
    transform: translate(-100%, 0);
    overflow-y: auto;
  }

  .globalNav {
    height: 100vh;
    overflow: scroll;
  }
  .globalNav-logo {
    display: block;
    margin: 16px 16px auto auto;
    width: 60px;
  }

  .container img {
    display: block;
    width: 60px;
  }

  .btn-contact {
    margin-block: 45px;
    margin-inline: auto;
    width: fit-content;
  }

  .btn-contact>a:hover {
    background-color: rgba(58, 72, 109, 0.5);
    font-size: 2rem;
  }

  .btn-contact>a {
    padding: 4px 16px;
    border-radius: 20px;
    border: 1px solid var(--textWhite);
  }

  .btn-contact>a::after {
    opacity: 0; /* 下線を消す */
  }

  .wrapper {
    height: 1200px;
    padding-inline: 10%;
  }

  .wrapper a {
    transform: translateY(110%);
  }

  .wrapper.open a {
    transition: all ease 1.3s;
    transform: translateY(0%);
  }

  ul {
    display: inline-block;
    width: 100%;
    padding: 0;
  }

  li {
    list-style: none;
    margin-block-end: 24px;
    overflow: hidden;
  }

  .menu a {
    padding-bottom: 4px;
    position: relative;
    text-decoration: none;
    color: var(--textWhite);
    font-size: 1.8rem;
    display: inline-block; /* 下線のアニメーションを文字幅に合わせるため */
  }

  .menu a::after {
    background-color: var(--textWhite);
    bottom: 0;
    content: "";
    display: block;
    height: 1px;
    left: 0;
    position: absolute;
    transition: 0.1s;
    width: 0;
  }

  .menu a:hover::after {
    width: 100%;
  }

  .middle {
    text-align: right;
  }

  .middle a {
    text-align: end;
  }

  .contact {
  }
</style>

<script>
  const body = document.querySelector("body")
  const hamburger = document.querySelector(".hamburger");
  const container = document.querySelector(".container");
  const wrapper = document.querySelector(".wrapper");

  hamburger.addEventListener("click", function () {
    body.classList.toggle("inactive");
    hamburger.classList.toggle("open");
    container.classList.toggle("open");
    wrapper.classList.toggle("open");
  });
</script>
