---
import BlogList from "@components/BlogList.astro";

import { getAllPosts } from "../../src/library/microcms";
import MoreButton from "./MoreButton.astro";

const posts = await getAllPosts(4);

---

<section class="blogs">
  <h2>最近のブログ</h2>
  <div class="splide" role="group" aria-label="最近のブログ" id="blogSlider">
    <div class="sliderWrap splide__track">
      <div class="container splide__list">
        {
          posts.contents.map((post) => (
            <BlogList
              id={post.id}
              slug={post.slug}
              src={post.eyecatch.url}
              date={post.publishedAt}
              title={post.title}
              summary={post.summary}
            />
          ))
        }
      </div>
    </div>
  </div>
  <MoreButton
  href = "/blogs/1",
  label = "ブログ一覧へ"
  width = "130px"
  fontSize = "1.6rem"
  marginInline = "auto"
  />
</section>

<style>
  section {
    margin: 4rem auto;
  }
  .blogs {
    opacity: 0;
    transform: translateY(20px);
    transition: 2s;
    padding-block-end: 4rem;
  }

  h2 {
    text-align: center;
    margin-bottom: 2.4rem;
  }

  .splide {
    margin-inline: auto;
    max-width: 1068px;
    margin-bottom: 2.4rem;
  }
  .sliderWrap {
    overflow-y: hidden;
    margin-inline: auto;
  }

  .splide__arrows {
    height: 4em;
    width: 4em;
  }

</style>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>

<script>
  import {ScrollObserver} from "./ScrollObserver"

  document.addEventListener("DOMContentLoaded", function () {
    const fadein = function (el, isIntersecting) {
      if (isIntersecting) {
        el.style.opacity = 1;
        el.style.transform = "none";
      }
    };
    const fadeinTrigger = new ScrollObserver(".blogs", fadein, {
      rootMargin: "-200px 0px",
      threshold: 0,
    });
  });

  import "../../src/splide.min.js";

  // Splideのオプション設定
  const options = {
    type: "slide",
    fixedWidth:"252px",
    height: "300px",
    gap: "20px",
    padding:  { left: '4rem', right: '4rem' },
    focus    : 'center',
    trimSpace: false,
    mediaQuery: "min",
    breakpoints: {
      1068: {
        focus    : false,
        trimSpace: true,
        arrows: false,
        padding: 0,
      }
    },
  }

  let blogSlider = new Splide("#blogSlider", options);
  blogSlider.mount();

</script>
