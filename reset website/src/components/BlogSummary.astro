---
const { src, date, title, summary } = Astro.props;
---

<div class="container">
  <a href="" class="flex">
    <img src={src} alt="" />
    <div class="wrapper">
      <p class="date">{date}</p>
      <h2>{title}</h2>
      <p class="summary">{summary}</p>
    </div>
  </a>
</div>

<style>
  img {
    width: 120px;
    height: 100%;
    padding-inline: 8px;
  }
  a {
    text-decoration: none;
  }
  .container {
    width: 320px;
  }

  .flex {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .container h2 {
    font-size: 1.4rem;
  }
  .container p {
    padding: 0;
    font-size: 1.2rem;
  }

  .date {
    font-size: 1rem;
  }
  .wrapper {
    color: var(--textBlack);
  }
  .summary {
    color: var(--textBlack);
    position: relative;
  }
  .summary::after {
    content: "";
    display: block;
    width: 100%;
    height: 80%;
    position: absolute;
    left: 0;
    bottom: 0;
    background: linear-gradient(to top, #f0f0f0e0, #f0f0f000);
  }
</style>
