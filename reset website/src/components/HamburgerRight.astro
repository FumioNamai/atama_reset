<button class="hamburger" id="js-hamburgerRight" title="hamburger-menu">
  <span></span>
  <span></span>
  <span></span>
  <p class="menu">MENU</p>
</button>

<style>
  /* ハンバーガーアイコン */
  .hamburger {
    position: relative;
    /* width: 60px; */
    /* height: 60px; */
    padding: 0 18px;
    background-color: transparent;
    border-color: transparent;
    z-index: 1000;
    cursor: pointer;
    display: none;
  }

  .hamburger span {
    width: 30px;
    height: 3px;
    border-radius: 1.5px;
    transition: ease 0.5s;
    background-color: var(--primary);
    filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.5));
    position: relative;
    display: block;
  }

  /*
  .open .menu {
    display: none;
  } */

  .hamburger span:nth-child(2) {
    margin: 8px 0;
  }

  .hamburger.open span:nth-child(1) {
    top: 10px;
    opacity: 0;
    transform: rotate(45deg);
    background-color: var(--textWhite);
  }

  .hamburger.open span:nth-child(2) {
    opacity: 0;
    background-color: var(--textWhite);
  }

  .hamburger.open span:nth-child(3) {
    opacity: 0;
    top: -10px;
    transform: rotate(-45deg);
    background-color: var(--textWhite);
  }

  .menu {
    display: none;
    transform: translateY(10px);
    margin-top: 5px;
    margin-left: -10px;
    transform: scale(0.7);
    color: var(--primary);
    filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.5));
  }

  @media screen and (768px <= width) {
    .hamburger {
      display: block;
      width: 90px;
      height: 90px;
      padding: 28px;
    }
    .menu {
      display: block;
    }
  }
</style>

<script>
