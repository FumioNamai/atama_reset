<style>
  /* ハンバーガーアイコン */
  .hamburger {
    position: relative;
    width: 60px;
    height: 60px;
    padding: 0 18px;
    background-color: transparent;
    border-color: transparent;
    z-index: 1000;
    cursor: pointer;
    display: block;
  }

  .hamburger span {
    width: 20px;
    height: 2px;
    border-radius: 1px;
    background-color: var(--primary);
    display: block;
    position: relative;
    transition: ease .5s;
  }

  .hamburger span:nth-child(2) {
    margin: 6px 0;
  }

  .hamburger.open span:nth-child(1) {
    top: 8px;
    opacity: 0;
    transform: rotate(45deg);
    background-color: var(--textWhite);
  }

  .hamburger.open span:nth-child(2) {
    opacity: 0;
    background-color: var(--textWhite);
  }

  .hamburger.open span:nth-child(3) {
    opacity: 0;
    top: -8px;
    transform: rotate(-45deg);
    background-color: var(--textWhite);
  }

  .menu {
    display: none;
  }

