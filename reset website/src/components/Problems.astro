---
const problems = [
  "頭痛、頭が重い",
  "首や肩のコリ",
  "疲れ目、ドライアイ",
  "眠りが浅い",
  "すぐに疲れる",
  "疲れが取れない",
  "やる気が出ない",
  "うっかりミスが多い",
  "集中力・記憶力が低下した",
  "ストレスが多い",
  "イライラする",
  "手足が冷える",
  "食欲不振",
];
---

<section>
  <div class="problems">
    <h3>こんなお悩みございませんか？</h3>
    <div class="wrapper box">
    <ul>
      {
        problems.map((problem) => (
          <li class="list">
            <img src="/checked.svg" alt="チェック" width="14px" height="15px" />
            {problem}
            </li>
            ))
          }
    </ul>
    <div class="image">
    </div>
  </div>
</div>

</section>

  <style>
    section {
      /* display: flex; */
      /* justify-content: center; */
      padding-block: 24rem;
      padding-left: 2.4rem;
      max-width: 900px;
      margin: 0 auto;
    }
    .problems {
      display: flex;
      justify-content: center;
      flex-direction: column;
      gap: 2.4rem;
      max-width: 512px;
      /* min-width: 327px; */
      overflow: hidden;
    }
    h3 {
      font-weight: normal;
      text-align: center;
    }
    .wrapper {
      position: relative;
    }

    .image {
      opacity: 0;
      position: absolute;
      z-index: -10;
      top: 10% ;
      left: 40%;
      width: 60%;
      height: 80%;
      background-position: top;
      background-size: cover;
      background-repeat: no-repeat;
      background-image: url(/problem.jpg);
      filter: blur(1px);
      /* opacity: 0.6; */
      border-radius: 16px 0 0 16px;
    }

    ul {
      padding: 0;
    }

    li {
      opacity: 0;
      font-size: 1.6rem;
      line-height: 200%;
      list-style: none;
      display: flex;
      align-items: center;
      gap: 8px;

    }

    li>img {
      padding-top: 4px;
    }

    .fadein{
      opacity: 0;
      width: 100%;
      animation: fadein 1s forwards linear;
      animation-iteration-count: 1;
    }
    .fadein:nth-child(1) {
      animation-delay: 0.1s;
    }
    .fadein:nth-child(2) {
      animation-delay: 0.2s;
    }
    .fadein:nth-child(3) {
      animation-delay: 0.3s;
    }
    .fadein:nth-child(4) {
      animation-delay: 0.4s;
    }
    .fadein:nth-child(5) {
      animation-delay: 0.5s;
    }
    .fadein:nth-child(6) {
      animation-delay: 0.6s;
    }
    .fadein:nth-child(7) {
      animation-delay: 0.7s;
    }
    .fadein:nth-child(8) {
      animation-delay: 0.8s;
    }
    .fadein:nth-child(9) {
      animation-delay: 0.9s;
    }
    .fadein:nth-child(10) {
      animation-delay: 1s;
    }
    .fadein:nth-child(11) {
      animation-delay: 1.1s;
    }
    .fadein:nth-child(12) {
      animation-delay: 1.2s;
    }
    .fadein:nth-child(13) {
      animation-delay: 1.3s;
    }

    @keyframes fadein {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  </style>

<script>
  const box = document.querySelector(".box");
  const lists = [...document.querySelectorAll(".list")];
  const image = document.querySelector(".image");

  const options = {
    // root:,
    rootMargin: "-50% 0px",
    threshold: 0
  }

  const setItemFadein = (entries) => {
    entries.forEach((entry) => {
      console.log(entry);
      if(entry.isIntersecting) {
        lists.map((list) => {
          list.classList.add("fadein")
        })
        image.classList.add("fadein")
      // } else {
      //   lists.map((list) => {
      //     list.classList.remove("fadein")
      //   })
      //   image.classList.remove("fadein")
      }
    }
  )}

  const observer = new IntersectionObserver(setItemFadein, options);
  observer.observe(box)

</script>
